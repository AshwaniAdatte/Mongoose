extends layout

block content
	body
	h3.center-align Update Selected Contact
	each val in data
		.row
			.col-6
				.card
					.card-content
						
						//h4 Name: #{val.name}

						//p Contact Id : #{val._id}
						form(action='update' method='get')
							.row
								.input-field.col.s6
									 
									input#_id.validate( type='hidden', name='_id', value=val._id)
							.row
								.input-field.col.s6
									label.active(for='name') Name
									input#name.validate( type='text', name='name', value=val.name)
								.row
								.input-field.col.s6
									label.active(for='phoneNo') Phone Number
									input#phoneNo.validate( type='text', name='phoneNo', value=val.phoneNo)
							.row
								button.btn(type='submit') Save
	a.navbar-brand(href='/').btn Back